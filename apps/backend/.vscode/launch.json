{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Docker: Attach to Node",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "address": "0.0.0.0",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/pm/src/app",
        "protocol": "inspector",
        "restart": true,
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }